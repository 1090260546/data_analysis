@import "~assets/less/variable";

:global {
  .display {
    &-preview-slide {
      // to overwrite Reveal section default padding style
      //  Padding: 0 20px;
      padding: 0 !important;
      width: 100% !important;
      height: 100% !important;
      display: flex !important;
    }

    &-preview-slide &-slide-background {
      position: relative;
    }

    &-preview-slide &-slide {
      position: absolute;
    }

    &-preview-slide &-slide {
      &-layer p {
        margin: 0;
      }
    }
  }

  .reveal aside.controls {
    color: @primary-color;
  }
}
