@import '~assets/less/variable';

:global {
  .display-setting-form {
    margin: 8px;

    .ant-form-item {
      margin-bottom: 0;
    }

    .ant-card + .ant-card {
      margin-top: -1px;
    }

    .ant-card-small > .ant-card-body {
      padding: 8px 8px 8px 20px;
    }

    &-palette {
      font-size: 24px;
    }
    &-img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;

      img {
        display: block;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        max-width: 100%;
        max-height: 100%;
      }
    }

    .ant-input-number {
      width: 72px;
    }

    .ant-upload {
      display: block;
      height: 155px;
      position: relative;
      border: 1px dashed @border-color-base;
      border-radius: 3px;
      cursor: pointer;

      i {
        display: none;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 36px;
        color: @light-text-color;
      }

      &:hover i {
        display: block;
      }
    }
  }
}
